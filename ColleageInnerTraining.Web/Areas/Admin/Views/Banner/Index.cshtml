@using ColleageInnerTraining.Common
@using ColleageInnerTraining.Common.Utils
@using ColleageInnerTraining.Web.Navigation
@{
    //Layout = "";
    ViewBag.CurrentPageName = PageNames.Managemnet.Banner;
    ViewBag.MenuId = PageNames.ManagemnetKey.Banner;

    var sel = new List<SelectListItem> { new SelectListItem { Text = "PC端", Value = "1" }, new SelectListItem { Text = "Wap端", Value = "2" } };
}
@Html.Action("Left", "Layout", new { currentPageName = ViewBag.CurrentPageName, menuId = ViewBag.MenuId })
<div class="content fr">
    <div class="rightTop">
        <p>轮播图管理</p>
        <ul class="subnav">
            <li>
                <a class="btn btn_yanhse" href="/Admin/Banner/Create">新增</a>
            </li>
        </ul>
    </div>
    <div class="title_btn fl w100">
        <div class="fl">
            <label class="fl f14 l28">标题：</label>
            <input type="text" id="search" class="form-control w160 fl" />
            <label class="fl f14 l28 mf30">类型：</label>
            @Html.DropDownList("Type", sel, "请选择", new { @class = "form-control w160 fl", @onchange = "change()" })
            <input class="btn btn_yanhse fl mf30" type="submit" value="搜索" />
        </div>
    </div>
    <div id="dataListDiv">
        @Html.Action("GetDataList")
    </div>
</div>
<div class="clearfix"></div>
<script src="~/Areas/Admin/Views/Banner/index.js?t=@DateTime.Now"></script>
