@using Abp.Web.Mvc.Extensions
@using ColleageInnerTraining.Web.Navigation
@using ColleageInnerTraining.Common;
@using ColleageInnerTraining.Common.Utils;
@{
    ViewBag.CurrentPageName = PageNames.Managemnet.Coursees;
    ViewBag.MenuId = PageNames.ManagemnetKey.Coursees;
}
@Html.Action("Left", "Layout", new { currentPageName = ViewBag.CurrentPageName, menuId = ViewBag.MenuId })
<div class="Container w">
   @Html.DropDownList("txtDepartment", new List<SelectListItem>(), new { @class = "hidden" })
   @Html.DropDownList("txtjob", ViewBag.JobPostData as IEnumerable<SelectListItem>, new { @class = "hidden" })
   @Html.DropDownList("txtclass", ViewBag.ClassData as IEnumerable<SelectListItem>, new { @class = "hidden" })

    <div class="content fr">
        <div class="rightTop">
            <p>课程管理</p>
            <ul class="subnav">
                <li>
                    <a class="btn btn_yanhse" href="/Admin/Course/Index">返回</a>
                </li>
            </ul>
        </div>

        <div class="title_btn fl w100 mt50">
            <div class="fl">
                <label class="fl f14 l28">类型：</label>
                @Html.DropDownList("txtType", UiKit.PopulateDropdown<ConfigureTypeC>(""), new { @class = "form-control w160 fl" })
                <select id="txtTypeValue" class="form-control w160 fl"></select>

                <input class="btn btn_yanhse fl mf30" type="submit" value="添加课程人员关联" onclick="set()" />
            </div>
        </div>

        <div id="dataListDiv">
            @Html.Action("GetCBCTManageDataList")
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<script type="text/javascript">
    var CourseID = '@ViewBag.CourseId';   
    var jobOption = $('#txtjob').html();
    var classOption = $('#txtclass').html();
</script>
<script src="~/Areas/Admin/Views/CBCT/Index.js?v=@DateTime.Now"></script>