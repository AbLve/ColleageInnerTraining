@model ColleageInnerTraining.Application.Dtos.ClassesInfoEditDto
@{
    ViewBag.Title = "国资商学院-班级管理新增";
}
<div class="Container w">
    <div class="side_menu fl">
        <h3 class="f14 c66">班级管理</h3>
        <div class="side_nav">
            <a class="cur">班级管理</a>
        </div>
    </div>
    <div class="content fr">
        <div class="title_btn fl w100">
            <div class="fl">
                @*<a class="btn btn_yanhse fl mf30" href="ClassesManageCreate?cId=0">添加</a>*@
                <a class="btn btn_yanhse fl mf30" href="javascript:window.history.back();">返回</a>
            </div>
        </div>
        @using (Html.BeginForm("ClassesManageSave", "Classes", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <ul class="content_form">
                <li>
                    @Html.HiddenFor(t => t.Id)
                    @Html.Label("班级名称：")
                    @Html.TextBoxFor(t => t.ClassesName, new { @class = "form-control", @required = "required", @placeholder = "请输入班级名称" })
                </li>
                <li>
                    @Html.Label("启用状态：")
                    <div class="radio_box">
                        @Html.RadioButtonFor(t => t.Enabled, true, new { @checked = "true" }) 是
                        @Html.RadioButtonFor(t => t.Enabled, false) 否
                    </div>
                </li>
                <li>
                    @Html.Label("班级简介：")
                    @Html.TextAreaFor(t => t.Description, new { @class = "form-control", @placeholder = "请输入班级简介" })
                </li>
                <li>
                    <input type="submit" class="btn btn_yanhse fl mf120" value="提交" />
                    <input type="reset" class="btn btn_huise fl mf50" value="取消" />
                </li>
            </ul>
        }
    </div>
    <div class="clearfix"></div>
</div>
