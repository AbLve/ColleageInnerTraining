@using Abp.Web.Mvc.Extensions
@using ColleageInnerTraining.Web.Navigation
@using ColleageInnerTraining.Common;
@using ColleageInnerTraining.Common.Utils;
@{
    ViewBag.CurrentPageName = PageNames.Managemnet.Coursees;
    ViewBag.MenuId = PageNames.ManagemnetKey.Coursees;
}
@Html.Action("Left", "Layout", new { currentPageName = ViewBag.CurrentPageName, menuId = ViewBag.MenuId })

<div class="Container w">
    <div class="content fr">
        <div class="rightTop">
            <p>课程管理</p>
            <ul class="subnav">
                <li>
                    <a class="btn btn_yanhse" href="/Admin/Course/Index">管理</a>
                </li>
                <li>
                    <a class="btn btn_yanhse" href="/Admin/Course/CreateAndEdite">新增</a>
                </li>
            </ul>
        </div>

        <div class="title_btn fl w100">
            <div class="fl">
                <label class="fl f14 l28 mf30">课程名称：</label>
                <input id="courseName" type="text" class="form-control w160 fl" />
                <label class="fl f14 l28 mf30">内训师：</label>
                <input id="txtTeacherName" type="text" class="form-control w160 fl" />
                <label class="fl f14 l28 mf30">部门：</label>
                @Html.DropDownList("tetDepartment", new List<SelectListItem>(), ("请选择"), new { @class = "form-control w160 fl" })
                <label class="fl f14 l28 mf30">岗位：</label>
                @Html.DropDownList("txtJobPost", ViewBag.JobPostData as IEnumerable<SelectListItem>, ("请选择"), new { @class = "form-control w160 fl" })
            </div>
        </div>

        <div class="title_btn fl w100 mt20">
            <div class="fl">
                <label class="fl f14 l28 mf30">类型：</label>
                @Html.DropDownList("txtType", UiKit.PopulateDropdown<CourseType>("请选择"), new { @class = "form-control w160 fl" })
                <label class="fl f14 l28 mf30">分类：</label>
                @Html.DropDownList("txtCate",  new List<SelectListItem>(),("请选择"), new { @class = "form-control w160 fl" })
                <input class="btn btn_yanhse fl mf30" type="submit" value="搜索" />
            </div>
        </div>

        <div id="dataListDiv">
            @Html.Action("GetCurriManageDataList")
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<script src="~/Areas/Admin/Views/Course/Index.js?v=@DateTime.Now"></script>