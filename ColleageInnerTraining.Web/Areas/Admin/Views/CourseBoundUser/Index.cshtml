@using Abp.Web.Mvc.Extensions
@using ColleageInnerTraining.Web.Navigation
@using ColleageInnerTraining.Common;
@using ColleageInnerTraining.Common.Utils;
@{
    ViewBag.CurrentPageName = PageNames.Managemnet.Coursees;
    ViewBag.MenuId = PageNames.ManagemnetKey.Coursees;
}
@Html.Action("Left", "Layout", new { currentPageName = ViewBag.CurrentPageName, menuId = ViewBag.MenuId })
<div class="Container w">
    <div class="content fr">
        <div class="rightTop">
            <p>课程管理</p>
            <ul class="subnav">
                <li>
                    <a class="btn btn_yanhse" href="/Admin/Course/Index">返回</a>
                </li>
            </ul>
        </div>

        <div class="title_btn fl w100">
            <div class="fl">
                <label class="fl f14 l28">成员名称：</label>
                <input type="text" class="form-control w160 fl" id="txtUserName" />
                <label class="fl f14 l28 mf30">部门：</label>
               @Html.DropDownList("txtDepartment", new List<SelectListItem>(), ("请选择"), new { @class = "form-control w160 fl" })

                <label class="fl f14 l28 mf30">是否已绑定：</label>
                @Html.DropDownList("IsBound", UiKit.PopulateDropdown<Whether>(""), new { @class = "form-control w160 fl" })                
                <input class="btn btn_yanhse fl mf30" type="submit" value="搜索" />
                <input type="button" onclick="setmanyUser()" class="btn btn_yanhse fl mf30" value="为课程设置人员" />
            </div>
        </div>

        <div id="dataListDiv">
            @Html.Action("GetBoundUserDataList")
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<script type="text/javascript">
    $(function () {
        CourseID = '@ViewBag.CourseId';
        $("#IsBound").val(1);
    })
</script>
<script src="~/Areas/Admin/Views/CourseBoundUser/Index.js?v=@DateTime.Now"></script>