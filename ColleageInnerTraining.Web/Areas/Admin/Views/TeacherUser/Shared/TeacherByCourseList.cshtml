@model IEnumerable<ColleageInnerTraining.Application.Dtos.CourseInfoListDto>
@using ColleageInnerTraining.Common
<table class="table_info">
    <tr>
        <th class="col-xs-2 text-center">线下培训课程名称</th>
        <th class="col-xs-2 text-center">内训师</th>
        <th class="col-xs-1 text-center">报名人数</th>
        <th class="col-xs-1 text-center">签到人数</th>
        <th class="col-xs-1 text-center">状态</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CourseName</td>
            <td>@item.TeacherName</td>
            <td>@item.Enrollment</td>
            <td>@item.CheckinNum</td>
            <td>@EnumDescription.GetFieldText((CourseStatus)item.Status)</td>
        </tr>
    }
</table>
@{Html.RenderPartial("~/Areas/Admin/Views/Shared/Pager.cshtml");}
