@using Abp.Extensions
@using ColleageInnerTraining.Web.Views
@using ColleageInnerTraining.Web.Navigation

@model ColleageInnerTraining.Web.Areas.Wap.Models.HeaderViewModel

@if (Model.CurrentPageName != PageNames.Wap.Member)
{
<div class="header wpd94 bgbai">
    <a href="/Wap/Home"><img src="~/images/wapimgs/logo.png"></a>
    <div class="Search_input">
        <input type="search" name="keyword" id="searchinput" class="form-control" placeholder="搜寻你喜欢的">
    </div>
</div>
}
else
{
    <div class="user_heaader overhide">
        <div class="user_icon fl" style="cursor:pointer">
            <i></i>
        </div>
        <div class="user_info fl">
            <p class="c33">@Model.UserName</p>
            <h3 class="c99">部门：@Model.DepartMentName</h3>
            <h3 class="c99">岗位：@Model.JobPostName</h3>
        </div>
        <div class="user_message">
            <i></i>
